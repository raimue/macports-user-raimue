master_sites        ${homepage}/bios/

checksums           md5     58a585339b4c624b3a95958b3d1e9da5 \
                    sha1    4f4431169af6bc913c0151ad488885df2700304a \
                    rmd160  1a283d60f3090444f61dbac036a0694aa797da11

patchfiles          patch-roms.diff

use_autoreconf      yes

livecheck.type      regex
livecheck.url       [lindex ${master_sites} 0]
livecheck.regex     ${name}-(\[0-9\]+)${extract.suffix}
