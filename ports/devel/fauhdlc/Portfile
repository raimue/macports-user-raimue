# $Id$

PortSystem          1.0

name                fauhdlc
version             20100325
categories          devel
platforms           darwin
maintainers         raimue

description         VHDL compiler and interpreter
long_description \
   fauhdlc is an experimental VHDL compiler and interpreter. It can compile a \
   subset of VHDL 2000 to an intermediate language. The result can be simulated \
   with an interpreter.

homepage            http://www3.informatik.uni-erlangen.de/Research/fauhdlc/
master_sites        ${homepage}/downloads/

checksums           md5     d25d269430da4525b4da51901155a642 \
                    sha1    da526f5c549ab48c535c885c5da114284803df38 \
                    rmd160  5854868c118193ea792e4fee67f3a8c7127856cd

depends_build       port:flex \
                    port:xmlto

use_autoreconf yes

livecheck.type      regex
livecheck.url       [lindex ${master_sites} 0]
livecheck.regex     ${name}-(\[0-9\]+)${extract.suffix}
